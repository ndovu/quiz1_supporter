<%= form_for(@user_support_form) do |f| %>
  <% if @user_support_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_support_form.errors.count, "error") %> prohibited this user_support_form from being saved:</h2>

      <ul>
      <% @user_support_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <p>
    <% for support_type in SupportType.find(:all) %>
      <div>
        <%= radio_button_tag "user_support_form[category_id]", support_type.id, @user_support_form.support_type_id == support_type.id %><%= support_type.name %>
      </div>
    <% end %>
  </p>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
